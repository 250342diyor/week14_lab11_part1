#include <iostream>
using namespace std;
void sumArrays(const double *arr1, const double *arr2,double*sum, int size);
int main() {
    int size;
    cout<<"Enter size of array: ";
    cin>>size;
    double arr1[1000],arr2[1000];
    cout<<"Enter array 1 elements: ";
    for(int i=0;i<size;i++) {
        cin>>arr1[i];
    }
    cout<<"Enter array 2 elements: ";
    for(int i=0;i<size;i++) {
        cin>>arr2[i];
    }
    sumArrays(arr1, arr2, arr2, size);
    cout<<"Sum of arrays is: ";
    for(int i=0;i<size;i++) {
        cout<<arr2[i]<<" ";
    }
}
void sumArrays(const double *arr1, const double *arr2, double *sum, int size) {
    for(int i=0;i<size;i++) {
        sum[i]=arr1[i]+arr2[i];
    }
}
