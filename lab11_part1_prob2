#include <iostream>
using namespace std;

int evenCount(const int *a, int size);
int main() {
    int n;
    cin >> n;
    int arr[1000];

    for (int i = 0; i < n; i++) cin >> arr[i];

    cout << evenCount(arr, n);
    return 0;
}
int evenCount(const int* a, int size) {
    int count = 0;
    // const int *p = a;
    for (int i = 0; i < size; i++) {
        if (*a % 2 == 0) count++;
        a++;
    }
    return count;
}
